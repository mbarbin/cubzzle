(lang dunolint 1.0)

;; Everything is instrumented
(rule
 (enforce
  (dune
   (instrumentation
    (backend bisect_ppx)))))

;; Test lib naming
(rule
 (cond
  ((path
    (glob test/**))
   (enforce
    (dune
     (library
      (and
       (public_name
        (is_prefix cubzzle-tests.))
       (name
        (is_suffix _test)))))))))

;; Configure the ppx_js_style linter
(rule
 (enforce
  (dune
   (lint
    (pps
     (and
      (pp ppx_js_style)
      (flag
       (name -allow-let-operators)
       (param none)
       (applies_to
        (pp ppx_js_style)))
      (flag
       (name -check-doc-comments)
       (param none)
       (applies_to
        (pp ppx_js_style)))))))))

;; Configure ppx flags
(rule
 (cond
  ((dune
    (has_field preprocess))
   (enforce
    (dune
     (preprocess
      (pps
       (flag
        (name -unused-code-warnings)
        (param
         (equals force))
        (applies_to driver)))))))))
