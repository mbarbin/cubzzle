(version 5.2.0)

(build
 (progn
  (when
   %{pkg-self:dev}
   (run dune subst))
  (run dune build -p %{pkg-self:name} -j %{jobs} @install)))

(depends
 dune
 dune-configurator
 conf-libX11
 conf-libXft
 conf-pkg-config
 ocaml)

(source
 (fetch
  (url https://github.com/ocaml/graphics/archive/refs/tags/5.2.0.tar.gz)
  (checksum
   sha256=baa99f5316c26df0844ee68921f531e554aab7ea2a1c881f30bd8365309077b0)))
